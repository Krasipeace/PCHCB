@model AssembleConfigurationFormModel
@{
    ViewData["Title"] = "Assemble PC";
}

<h3 class="text-center">@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="row mt-2">
                <div class="form-group mt-2">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Name...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Gpus"></label>
                    <select asp-for="Gpus" class="form-control">
                        @foreach (var item in Model.Gpus)
                        {
                            <option value="@item.Id">@item.Name - @item.Memory - @item.Price</option>
                        }
                    </select>
                    <span asp-validation-for="Gpus" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Cpus"></label>
                    <select asp-for="Cpus" class="form-control">
                        @foreach (var item in Model.Cpus)
                        {
                            <option value="@item.Id">@item.Name - @item.Socket - @item.Frequency @item.Price</option>
                        }
                    </select>
                    <span asp-validation-for="Cpus" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Motherboards"></label>
                    <select asp-for="Motherboards" class="form-control">
                        @foreach (var item in Model.Motherboards)
                        {
                            <option value="item.Id">@item.Name - @item.Socket - @item.Chipset - @item.Price</option>
                        }
                    </select>
                    <span asp-validation-for="Motherboards" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Cases"></label>
                    <select asp-for="Cases" class="form-control">
                        @foreach (var item in Model.Cases)
                        {
                            <option value="item.Id">@item.Name - @item.Price</option>
                        }
                    </select>
                    <span asp-validation-for="Cases" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Coolers"></label>
                    <select asp-for="Coolers" class="form-control">
                        @foreach (var item in Model.Coolers)
                        {
                            <option value="item.Id">@item.Name - @item.Tdp - @item.Price</option>
                        }
                    </select>
                    <span asp-validation-for="Coolers" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Rams"></label>
                    <select asp-for="Rams" class="form-control">
                        @foreach (var item in Model.Rams)
                        {
                            <option value="@item.Id">@item.Name - @item.Frequency - @item.Capacity - @item.Price</option>
                        }
                    </select>
                    <span asp-validation-for="Rams" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Storages"></label>
                    <select asp-for="Storages" class="form-control">
                        @foreach (var item in Model.Storages)
                        {
                            <option value="@item.Id">@item.Name - @item.Capacity - @item.Price</option>
                        }
                    </select>
                    <span asp-validation-for="Storages" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label asp-for="Psus"></label>
                    <select asp-for="Psus" class="form-control">
                        @foreach (var item in Model.Psus)
                        {
                            <option value="@item.Id">@item.Name - @item.Wattage - @item.Price</option>
                        }
                    </select>
                    <span asp-validation-for="Psus" class="text-danger"></span>
                </div>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-4" type="submit" value="Assemble" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
