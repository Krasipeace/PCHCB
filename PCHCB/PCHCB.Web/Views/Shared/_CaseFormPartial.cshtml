@model CaseFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group mt-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Price...">
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="row mt-2">
                <div class="form-group col-md-4">
                    <label asp-for="CaseSize"></label>
                    <select asp-for="CaseSize" class="form-control">
                        <option value="0">Mini Tower</option>
                        <option value="1">Mid Tower</option>
                        <option value="2">Full Tower</option>
                    </select>
                    <span asp-validation-for="CaseSize" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="FormFactor"></label>
                    <select asp-for="FormFactor" class="form-control">
                        <option value="0">ATX</option>
                        <option value="1">Micro ATX</option>
                        <option value="2">Mini ATX</option>
                        <option value="3">E-ATX</option>
                    </select>
                    <span asp-validation-for="FormFactor" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="PsuFactor"></label>
                    <select asp-for="PsuFactor" class="form-control">
                        <option value="0">ATX</option>
                        <option value="1">LFX</option>
                        <option value="2">SFX</option>
                        <option value="3">CFX</option>
                        <option value="4">TFX</option>
                        <option value="5">flexATX</option>
                    </select>
                    <span asp-validation-for="PsuFactor" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mt-2">
                <label asp-for="MaxGpuLength"></label>
                <input asp-for="MaxGpuLength" class="form-control" placeholder="Max Graphic Card Length in mm...">
                <span asp-validation-for="MaxGpuLength" class="small text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="MaxAirCpuCoolerHeight"></label>
                <input asp-for="MaxAirCpuCoolerHeight" class="form-control" placeholder="Air cooler Height in mm...">
                <span asp-validation-for="MaxAirCpuCoolerHeight" class="small text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="MaxStorageDevices"></label>
                <input asp-for="MaxStorageDevices" class="form-control" placeholder="Max Storage Disk Drives in Case...">
                <span asp-validation-for="MaxStorageDevices" class="small text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="MaxRadiatorLength"></label>
                <input asp-for="MaxRadiatorLength" class="form-control" placeholder="Max Possible Length of Graphic card...">
                <span asp-validation-for="MaxRadiatorLength" class="small text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Your Image URL here...">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder="Describe your component here..."></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-4" type="submit" value="Submit" />
            </div>
        </form>
    </div>
</div>
