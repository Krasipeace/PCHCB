@using PCHCB.Services.Data.Contracts;
@using PCHCB.Web.Infrastructure.Extensions;
@inject ICoolerService CoolerService
@inject IProviderService ProviderService

@model MineViewModel
@{
    bool isUserProvider = await ProviderService.ProviderExistsByUserIdAsync(User.GetId()!);
    var coolers = await ProviderService.AllCoolersByProviderIdAsync(User.GetId()!);
}
<div class="row">
    @if (Model.Coolers.Any())
    {
        <h3>Coolers</h3>
        <hr />
        @foreach (var item in Model.Coolers)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <img class="card-img-top img-thumbnail" src="@item.ImageUrl" alt="image">
                    <div class="card-body text-center">
                        <p>@item.Name</p>
                        <p>$@($"{item.Price:f2}")</p>
                        <p><a class="btn btn-outline-info" asp-area="" asp-controller="Cooler" asp-action="Details" asp-route-id="@item.Id">Details</a></p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="mt-2">
            You dont have any Coolers Yet! Add More to be able to view them!
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Cooler" asp-action="Add">Add Cooler</a>
        </p>
    }
</div>